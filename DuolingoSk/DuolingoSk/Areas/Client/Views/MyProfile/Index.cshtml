<!-- Login -->
<section class="w3l-contacts-12" id="contact">
    <div class="contact-top pt-5">
        <div class="container py-md-3">

            <div class="heading text-center mx-auto">
                <h3 class="head">My Profile</h3>
                <p><hr /></p>
            </div>

            <div class="row cont-main-top">

                <div class="contacts12-main col-lg-12">
                    <center>
                        <form class="main-input">
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">First Name *</label>
                                <input type="text" placeholder="First Name" name="mobileno" id="mobileno" required="">
                            </div>
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Last Name *</label>
                                <input type="text" placeholder="Last Name" name="mobileno" id="mobileno" required="">
                            </div>
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Email Id</label>
                                <input type="text" placeholder="Email Id" name="mobileno" id="mobileno">
                            </div>
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Mobile No *</label>
                                <input type="text" placeholder="Mobile No" name="mobileno" id="mobileno" required="" disabled>
                            </div> 
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Date Of Birth *</label>
                                <input type="text" placeholder="DD/MM/YYYY" id="password" name="password" required="">
                            </div>
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Address *</label>
                                <input type="text" placeholder="Address" id="password" name="password" required="">
                            </div>
                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">City *</label>
                                <input type="text" placeholder="City" id="password" name="password" required="">
                            </div> 
                            <div class="text-left col-lg-6">
                                <button id="btnUpdateProfile" type="button" class="btn btn-theme2">Update</button>
                            </div>
                        </form>
                    </center>
                </div>
                <!-- //contact form -->

            </div>
        </div>

    </div>
</section>

