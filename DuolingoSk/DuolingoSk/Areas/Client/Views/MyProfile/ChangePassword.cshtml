@using DuolingoSk.Model;
@{
    ViewBag.Title = "ChangePassword";
}
 
<section class="w3l-contact-breadcrum" style="background-image: linear-gradient(to right, rgba(42, 42, 42, 0.71), rgba(38, 40, 40, 0.78)), url(/Content/client_assets/images/sk/7.jpg);">
    <div class="breadcrum-bg">
        <div class="container py-5">
            <p><a href="/">Home</a> &nbsp; / &nbsp; Change Password</p>
        </div>
    </div>
</section>

<!-- Login -->
<section class="w3l-contacts-12" id="contact">
    <div class="contact-top pt-5">
        <div class="container py-md-3">

            <div class="heading text-center mx-auto">
                <h3 class="head">Change Password</h3>
                <p><hr /></p>
            </div>

            <div class="row cont-main-top">

                <div class="contacts12-main col-lg-12">
                    <center>
                        <form class="main-input">

                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Current Password *</label>
                                <input type="password" placeholder="Password" id="currentpwd" name="currentpwd" required="">

                                <span id="spn_currentpwd" class="clserror text-danger"></span>
                            </div>

                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">New Password *</label>
                                <input type="password" placeholder="Password" id="newpwd" name="newpwd" required="">

                                <span id="spn_newpwd" class="clserror text-danger"></span>
                            </div>

                            <div class="top-inputs d-grid col-lg-6">
                                <label class="text-left">Confirm Password *</label>
                                <input type="password" placeholder="Password" id="rtpwd" name="rtpwd" required="">

                                <span id="spn_rtpwd" class="clserror text-danger"></span>
                            </div>

                            <div class="text-left col-lg-6">
                                <button id="btnChangePassword" type="button" class="btn btn-theme2">Submit</button>
                            </div>
                        </form>
                    </center>
                </div>
                <!-- //contact form -->

            </div>
        </div>

    </div>
</section>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>

    jQuery(document).on("click", "#btnChangePassword", function () {
        var requiredMessage = 'This field is required';
        var flag = true;
        jQuery(".clserror").hide();

        var currentpwd = jQuery.trim(jQuery("#currentpwd").val());
        var newpwd = jQuery.trim(jQuery("#newpwd").val());
        var rtpwd = jQuery.trim(jQuery("#rtpwd").val());

        if (currentpwd == "" || currentpwd == null) {
            jQuery("#spn_currentpwd").text(requiredMessage);
            jQuery("#spn_currentpwd").show();
            flag = false;
        }
        if (newpwd == "" || newpwd == null) {
            jQuery("#spn_newpwd").text(requiredMessage);
            jQuery("#spn_newpwd").show();
            flag = false;
        }
        if (rtpwd == "" || rtpwd == null) {
            jQuery("#spn_rtpwd").text(requiredMessage);
            jQuery("#spn_rtpwd").show();
            flag = false;
        }

        if (newpwd != "" && rtpwd != "") {
            if (newpwd != rtpwd) {
                jQuery("#spn_rtpwd").text("New Password and Confirm password not matched");
                jQuery("#spn_rtpwd").show();
                flag = false;
            }
        }

        if (flag) {
             $.blockUI({ message: "<h4>Please Wait...</h4>" });
            var URL = '@Url.Action("ChangePasswordSubmit", "MyProfile")';
            jQuery.ajax({
                url: URL,
                type: 'POST',
                data: jQuery('form').serialize(),
                success: function (data) {
                    $.unblockUI();
                    if (data == "SUCCESS") {
                        alert("Password changed successfully");
                        window.location.href = "/login";
                    }
                    else if (data == "CP_NOT_MATCHED") {
                        alert("Current Password is wrong");
                    }
                    else {
                        alert("Error: Something went wrong. Please try again.");
                    }
                },
                error: function (data) {
                    alert("Something went wrong. Please try again.");
                }

            });

            return false;
        }
    });


</script>