<div class="modal fade open" id="otpmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Forget Password OTP</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$('#hdnotptxt').val('');$('#otptxt').val('');">&times;</button>
            </div>
            <div class="modal-body">
                <label>Enter OTP</label><input type="text" id="otptxt" value="" class="form-control" maxlength="10" />
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeleteProductItem" />
                <button data-dismiss="modal" class="btn btn-danger" type="button" onclick="$('#hdnotptxt').val('');$('#otptxt').val('');">Close</button>
                <button class="btn btn-primary" type="button" onclick="submitotp();">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade open" id="changepwdmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Set New Password</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>
                    <label>New Password</label>
                    <input type="password" id="newpassword" value="" class="form-control" maxlength="20" />
                </p>

                <p>
                    <label>Confirm Password</label>
                    <input type="password" id="confirmpassword" value="" class="form-control" maxlength="20" />
                </p>

            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDeleteProductItem" />
                <button data-dismiss="modal" class="btn btn-danger" type="button">Close</button>
                <button class="btn btn-primary" type="button" onclick="FnResetNewPassword();">Submit</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/admin_assets/js/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>

    function FnForgetPassword() {

        if ($("#emailmobile").val().trim() == "") {
            $(".errorcls").html("Mobile number must be required!!");
            return false;
        }
        else {
            $(".errorcls").html("");

            if ($('#hdnotptxt').val() == "") {

               var URL = '@Url.Action("SendOTP", "ForgetPassword")';

               $.ajax({
                type: 'POST',
                async: true,
                url: URL + "?MobileNumber=" + $("#emailmobile").val(),
                success: function (result) {
                    if (result == "NotExist") {
                        alert("Mobile Number does not exist");
                        return false;
                    }
                    if (result == "InActiveAccount") {
                        alert("Your Account is Inactive. Please contact to support");
                        return false;
                    }
                    else {
                        alert("Otp Sent to your registerd mobile number.");
                        $('#hdnotptxt').val(result);
                        $("#otpmodal").modal();
                    }
                },
                error: function (resultData) {
                }
            });
                return false;
            }
            else {
                return true;
            }
        }
    }

    function submitotp() {

        if ($("#otptxt").val() == "") {
            alert("Please enter otp");
            return false;
        }

        if ($("#otptxt").val() != $('#hdnotptxt').val()) {
             alert("Invalid OTP");
            return false;
        }

        $("#otpmodal").modal('hide');
        $("#changepwdmodal").modal('show');
    }

    function FnResetNewPassword() {

        var newPasswordText = $("#newpassword").val();
        var confirmPasswordText = $("#confirmpassword").val();

        if (newPasswordText.trim() == "") {
            alert("New Password is required");
            return false;
        }

        if (confirmPasswordText.trim() == "") {
            alert("Confirm Password is required");
            return false;
        }

        if (newPasswordText.trim() != confirmPasswordText.trim()) {
            alert("New Password and Confirm Password does not matched");
            return false;
        }


        var URL = '@Url.Action("ResetNewPassword", "ForgetPassword")';

        $.ajax({
            type: 'POST',
            async: true,
            url: URL + "?MobileNumber=" + $("#emailmobile").val().trim() + "&NewPassword=" + newPasswordText.trim(),
            success: function (result) {

                $("#changepwdmodal").modal('hide');

                if (result == "Success") {
                    alert("New Password is set successfully..");
                    window.location.href = "/login";
                    return false;
                }
                else {
                    alert("Something went wrong");
                }
            },
            error: function (resultData) {
                alert("ERROR: Something went wrong");
            }
        });

    }

</script>