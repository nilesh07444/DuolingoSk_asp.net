@using DuolingoSk.Model;
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Duolingo sk</title>
    <!-- web fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:400,600,700,800,900&display=swap" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Hind&display=swap" rel="stylesheet">
    <!-- //web fonts -->
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/Content/client_assets/css/style-starter.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" />

</head>
<body>

    <section class="w3l-bootstrap-header">
        <nav class="navbar navbar-expand-lg navbar-light py-lg-3 py-2">
            <div class="container">
                <a class="navbar-brand" href="/"> Duolingo sk</a>
                <!-- if logo is image enable this
                <a class="navbar-brand" href="#index.html">
                    <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
                </a> -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon fa fa-bars"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        @*<li class="nav-item">

                                <a class="dropdown-item" href="" data-toggle="modal" data-target="#modalLoginForm"> Popup  </a>

                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/aboutus">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contactus">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0);" onclick="return fnFreeDemo();" style=" background-color: #e86f6f; font-size: 18px; border-radius: 10px; ">Free Demo</a>
                        </li>
                        @if (clsClientSession.UserID == 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">Register</a>
                            </li>
                        }

                        @if (clsClientSession.UserID > 0)
                        {
                            <li class="nav-item dropdown">
                                @{
                                    string strnm = clsClientSession.FirstName + " " + clsClientSession.LastName;
                                }
                                <a href="#" class="nav-link dropdown-toggle text-white" data-toggle="dropdown"><i class="fa fa-user" aria-hidden="true"></i><span>&nbsp;  @strnm </span></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="/myexams" class="dropdown-item">My Exams</a>
                                    <a href="/materials" class="dropdown-item">Materials</a>
                                    <a href="/tips" class="dropdown-item">Tips</a>
                                    <a href="/renewaccount" class="dropdown-item">Re-Registration</a>
                                    <a href="/myprofile" class="dropdown-item">My Profile</a>
                                    <a href="/myprofile/changepassword" class="dropdown-item">Change Password</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="/client/studentlogin/signout" class="dropdown-item">Logout</a>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </section>

    @RenderBody()

    <!-- grids block 5 -->
    <section class="w3l-footer-29-main" id="footer">
        <div class="footer-29 text-center">
            <div class="container">

                <div class="main-social-footer-29">

                    <a href="https://www.facebook.com/SKacademi" class="facebook"><span class="fa fa-facebook"></span></a>
                    <a href="https://twitter.com/skacademy_ielts" class="twitter"><span class="fa fa-twitter"></span></a>
                    <a href="#instagram" class="instagram"><span class="fa fa-instagram"></span></a>
                    <a href="#google-plus" class="google-plus"><span class="fa fa-google-plus"></span></a>
                    <a href="#linkedin" class="linkedin"><span class="fa fa-linkedin"></span></a>
                </div>
                <div class="bottom-copies text-center">
                    <p class="copy-footer-29">© @DateTime.Now.Year Duolingo Sk. All rights reserved</p>
                </div>
            </div>
        </div>
        <!-- move top -->
        <button onclick="topFunction()" id="movetop" title="Go to top">
            <span class="fa fa-angle-up"></span>
        </button>

        <!-- /move top -->
    </section>

    <!-- model popup code start> -->


    <form name="f1" id="f1" method="GET" action="">

        <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="background-color:#A21D22">
                    <div class="modal-header text-center">
                        <h1 class="modal-title w-100 font-weight-bold" style="color: white;font-family: myriad pro; margin-top: 15px"> <i>LOGIN</i></h1>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <i class="fa fa-user" style="color:white;"> <label class="fnt" style="color: white;font-size: 18px;">&nbsp;Username </label></i>
                            <input type="text" name="username" id="username" class="form-control validate" required>

                        </div>

                        <div class="md-form mb-4">
                            <i class="fa fa-lock" style="color: white;font-size:20px;"> <label class="fnt" style="color: white;font-size: 18px;">&nbsp;Password </label></i>
                            <input type="password" name="password" id="password" class="form-control validate " required>

                        </div>

                    </div>


                    <div class=" text-center" style="margin-top: 20px">
                        <h1 class=" w-100 font-weight-bold"> <button type="submit" class="btn btn-primary" style="background-color: white;color: #181c33">Login</button></h1>



                    </div>


                    <div class="modal-header text-center">
                        <h2 class="modal-title w-100 font-weight-bold" data-dismiss="modal"><a class="dropdown-item" href="" data-toggle="modal" data-target="#modalfp" style="color: white;font-family: myriad pro; margin-top: 15px"> <i>  Forget Password ?</i> </a></h2>

                    </div>
                </div>
            </div>
        </div>

    </form>

    <!-- model popup code end> -->

    <script src="~/Content/client_assets/js/jquery-3.3.1.min.js"></script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>

    <script src="~/Content/client_assets/js/lightbox-plus-jquery.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
       
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- BlockUI js-->
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("movetop").style.display = "block";
            } else {
                document.getElementById("movetop").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }

        $(function () {
            $('.navbar-toggler').click(function () {
                $('body').toggleClass('noscroll');
            })
        });

        jQuery(document).ready(function () {
            jQuery('#tblGrid').DataTable();
        });

        function fnFreeDemo() {

            var loggedInUser = '@clsClientSession.UserID';
            if (loggedInUser == 0) {
                alert("You have to register first to give free demo exam");
                window.location.href = "/register";
            }
            else {
                window.location.href = "/demoexam";
            }

        }

    </script>

    <!-- Smooth scrolling -->

</body>

</html>
<!-- // grids block 5 -->
