@using DuolingoSk.Model;
@using DuolingoSk.Models;
@using DuolingoSk.Helper;

@model List<PackageInquiryVM>
@{
    ViewBag.Title = "PackageInquiry";

    int counter = 1;
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Package Inquiry List
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">Package Inquiry List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>Package Inquiry List</h5>
            </div>
            <div class="card-body vendor-table">
                  
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th width="5%;">#</th>
                            <th>Date</th>
                            <th>Package Name</th>
                            <th>Name</th>
                            <th>Mobile No</th>
                            <th>Email Id</th> 
                            <th width="10%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (PackageInquiryVM obj in Model)
                            {
                        <tr class="grade">
                            <td>@counter.</td>
                            <td>@obj.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@obj.PackageName</td>
                            <td>@obj.FullName</td>
                            <td>@obj.MobileNo</td>
                            <td>@obj.EmailId</td> 
                            <td>
                                <a title="View Inquiry" href="/admin/package/viewinquiry/@obj.PackageBuyDetailId"><i class="fa fa-eye font-success"></i></a>
                            </td>
                        </tr>
                                counter++;
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>
  
<script>

    jQuery(document).ready(function () {
        jQuery('html, body').animate({ scrollTop: 0 }, 1000);
    });
      
</script> 