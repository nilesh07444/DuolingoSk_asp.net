@using DuolingoSk.Helper;
@model MaterialVM

@{
    ViewBag.Title = "View Material";
}

<style>
    .labeltext {
        font-weight: bold;
        font-size: 14px;
        color: #000000;
    }

    .labelvalue {
        font-size: 14px;
        color: #000000;
        padding-left: 15px;
    }

    .profile-table table tbody tr td:first-child {
        min-width: 150px;
        font-weight: bold;
    }
</style>

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <div class="page-header-left">
                        <h3>
                            Material - @Model.MaterialTitle
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/material">Material</a></li>
                        <li class="breadcrumb-item active">View</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Material</h5>
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="table-responsive profile-table">
                                <table class="table table-responsive">
                                    <tbody>
                                        <tr>
                                            <td>Material File:</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.MaterialFileName) && Model.MaterialFileType == (int)MaterialFileTypes.Document)
                                                {
                                                    if (File.Exists(Server.MapPath("~/Images/MaterialMedia/" + Model.MaterialFileName)))
                                                    {
                                                        <a target="_blank" href="~/Images/MaterialMedia/@Model.MaterialFileName" download>
                                                            Download
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Material Title:</td>
                                            <td>@Model.MaterialTitle</td>
                                        </tr>
                                        <tr>
                                            <td>Material Type:</td>
                                            <td>@(Model.MaterialType == (int)MaterialTypes.Material ? "Material" : "Tips")</td>
                                        </tr>
                                        <tr>
                                            <td>Material File Type:</td>
                                            <td>@(Model.MaterialFileType == (int)MaterialFileTypes.Document ? "Document" : (Model.MaterialFileType == (int)MaterialFileTypes.Video ? "Video" : ""))</td>
                                        </tr>
                                        <tr>
                                            <td>Material Video Link:</td>
                                            <td><a target="_blank" href="@Model.MaterialVideoLink">@Model.MaterialVideoLink</a></td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Created By:</td>
                                            <td>@Model.strCreatedBy</td>
                                        </tr>

                                        <tr>
                                            <td>Created Date:</td>
                                            <td>@CommonMethod.ConvertFromUTC(Model.CreatedDate)</td>
                                        </tr>

                                        <tr>
                                            <td>Modified By:</td>
                                            <td>@Model.strModifiedBy</td>
                                        </tr>

                                        <tr>
                                            <td>Modified Date:</td>
                                            <td>@CommonMethod.ConvertFromUTC(Model.UpdatedDate)</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

