@using DuolingoSk.Model;
@using DuolingoSk.Models;
@using DuolingoSk.Helper;

@model List<ExamVM>
@{
    ViewBag.Title = "ExamList";
    List<SelectListItem> lstlvls = ViewData["LevelList"] as List<SelectListItem>;
   
    int counter = 1;
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Exam List
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">Exam List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>Exam List</h5>
            </div>
            <div class="card-body vendor-table">
                <h3>Filter:</h3>
                <div class="row" style="margin-top:25px; border-bottom: 2px solid #f8f8f9; padding-bottom: 25px; margin-bottom: 10px;">
                    <div class="col-md-3">
                        <label>Level</label>
                        <select id="selectlevel" class="form-control">
                            <option value="-1">All</option>
                            @if (lstlvls != null && lstlvls.Count() > 0)
                            {
                                foreach (var objc in lstlvls)
                                {
                                    <option value="@objc.Value">@objc.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label>Result Status</label>
                        <select id="selectstatus" class="form-control">
                            <option value="-1">All</option>
                            <option value="Pending">Pending</option>
                            <option value="Complete">Complete</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <input type="button" value="Filter" class="btn btn-info" onclick="filterdata();" style="position: absolute; bottom: 0;" />
                    </div>
                </div>
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th width="5%;">#</th>
                            <th>Exam Date</th>
                            <th>Student Name</th>
                            <th>Agent Name</th>
                            <th>Exam Level</th>
                            <th>Result Status</th>
                            <th>Score</th>
                            <th width="10%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (ExamVM obj in Model)
                            {
                                <tr class="grade">
                                    <td>@counter.</td>
                                    <td>@Convert.ToDateTime(obj.ExamDate).ToString("dd/MM/yyyy")</td>
                                    <td>@obj.StudentName</td>
                                    <td>@obj.AgentName</td>
                                    <td>@obj.LevelName</td>
                                    <td>@(obj.ResultStatus == 1 ? "Pending" : "Complete")</td>
                                    <td>@Convert.ToInt32(obj.OverAllScore)</td>
                                    <td>
                                        <a title="View" href="/admin/exam/detail/@obj.Exam_Id"><i class="fa fa-eye mr-2 font-success"></i></a>
                                        @if (obj.ResultStatus == 2)
                                        {
                                            <a title="Result" href="/admin/exam/downloadcertificate?examid=@obj.Exam_Id" target="_blank"><i class="fa fa-list-alt mr-2 font-success"></i></a>
                                        }

                                    </td>
                                </tr>
                                counter++;
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>
 
<script>

    jQuery(document).ready(function () {
        jQuery('html, body').animate({ scrollTop: 0 }, 1000);
        $("#selectlevel").val('@ViewBag.levelid');
        $("#selectstatus").val('@ViewBag.status');
    });
    function filterdata() {
        var levlid = $("#selectlevel").val();
        var statusid = $("#selectstatus").val();
        
        location.href = "/admin/exam?level=" + levlid + "&status=" + statusid;
    }
</script>